<%- include('partials/header')%>

<div class="container">
  <h2>Edit React</h2>
  <form action="/Movie/Edit/<%= Records[0].id%>?_method=PUT" method="POST">
    <!-- <%for(var items of Records){%> -->
    <div class="form-group">
      <label for="email">Id</label>
      <input
        type="text"
        id="id"
        name="id"
        class="form-control"
        placeholder="E.g., Room 4.240"
        maxlength="100"
        value="<%= Records[0].id %>"
        readonly
      />
    </div>
    <div class="form-group">
      <label for="email">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        value="<%= Records[0].title%>"
      />
    </div>
    <div class="form-group">
      <label for="pwd">Completed</label>
      <input
        type="text"
        class="form-control"
        id="Completed"
        name="Completed"
        value="<%= Records[0].completed%>"
      />
    </div>
    <!-- <%}%> -->
    <button type="submit" class="btn btn-default">Update</button>
  </form>
</div>
